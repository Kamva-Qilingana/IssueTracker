@model IssueTracker.Models.IssueListViewModel
@using IssueTracker.Models

@{
    ViewData["Title"] = "Create Issue";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Issue</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container py-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-primary"><i class="fas fa-bug me-2"></i>Create Issue</h1>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Home")"><i class="fas fa-arrow-left me-1"></i>Back</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="NewIssue.IssueTypeId" class="form-label">Issue Type</label>
                        <select asp-for="NewIssue.IssueTypeId" class="form-select"
                                asp-items="@(new SelectList(Model.IssueTypes, "IssueTypeId", "IssueName"))">
                            <option value="">-- Select Issue Type --</option>
                        </select>
                        <span asp-validation-for="NewIssue.IssueTypeId" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="NewIssue.Description" class="form-label">Description</label>
                        <textarea asp-for="NewIssue.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="NewIssue.Description" class="text-danger"></span>
                    </div>

                    <!-- Hardcoded priority since your model is simplified -->
                    <div class="mb-3">
                        <label class="form-label">Priority</label>
                        <input class="form-control" value="Medium" readonly />
                    </div>

                    <button type="submit" class="btn btn-success"><i class="fas fa-check me-1"></i>Create Issue</button>
                </form>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
